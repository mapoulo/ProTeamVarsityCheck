<section id="filterid">
    <div class="optionsDiv">
        Filter By Position
        <select id="selectField">
            <option value="All" selected>All</option>
            <option value="Eastern">Eastern Cape</option>
            <option value="Free">Free State</option>
            <option value="Gauteng">Gauteng</option>
            <option value="KwaZulu">KwaZulu-Natal</option>
            <option value="Limpopo">Limpopo</option>
            <option value="Mpumalanga">Mpumalanga</option>
            <option value="Northern">Northern Cape</option>
            <option value="North">North West</option>
            <option value="Western">Western Cape</option>
        </select>
    </div>

    @{
        var schoolIdd = 0;
        var FacultyII = 0;
    }

    @foreach (var degree in Model.degrees)
    {
        if (degree.Name == ViewBag.degreeName)
        {
            schoolIdd = degree.SchoolId;
        }
    }
    @foreach (var school in Model.schools)
    {
        if (school.Id == schoolIdd)
        {
            FacultyII = school.FacultyId;
        }
    }

    <table id="myTable">
        <tr position=""></tr>
        <tr position="Eastern">
            <td>
                @foreach (var universityFaculty in Model.universityFaculties)
                {

                    if (universityFaculty.FacultyId == FacultyII)
                    {
                        foreach (var university in Model.universities)
                        {
                            if (university.Id == universityFaculty.UniversityId)
                            {
                                if (university.Location == "Eastern Cape")
                                {
                                    <div class="cont1">
                                        <div id="co">
                                            <h3>@university.Name</h3>
                                            <img src="@Url.Content(university.Image)" alt="" />
                                            <div class="btn-co">
                                                <button type="button" onclick="window.location.href = '/Home/Application'" class="btn-2">More Info</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }

                        }
                    }

                }

