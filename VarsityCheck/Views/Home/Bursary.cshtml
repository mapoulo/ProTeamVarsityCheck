@model VarsityCheck.ViewModels.DisplayViews

@{
    ViewBag.Title = "Bursary";

}


<section>
    <div class="head-t">
        <article>
            <img src="~/imgz/trophy-shape.png" alt="">
        </article>
        <aside>
            <h5>SOUTH AFRICAN BURSARIES</h5>
        </aside>
    </div>
</section>

<section id="filterid">
    <div class="optionsDiv">
        Filter By Position

        <select id="selectField">
            <option value="All" selected>All</option>
            <option value="Eastern">Field</option>
            <option value="Free">Company name</option>
            <option value="Gauteng">Gauteng</option>
            <option value="KwaZulu">KwaZulu-Natalr</option>
            <option value="Limpopo">Limpopo</option>
            <option value="Mpumalanga">Mpumalanga</option>
            <option value="Northern">Northern Cape</option>
            <option value="North">North West</option>
            <option value="Western">Western Cape</option>
        </select>

    </div>
    <table id="myTable">

        <tr position=""></tr>
        <tr position="Engineering">
            @foreach (var financialAid in Model.financialAids)
            {
                <td>
                    <div class="cont1">
                        <div id="co">
                            <h3> @financialAid.BursaryName</h3>
                            <img src="~/imgz/universities/ump.jpg" alt="">
                            <div class="btn-co">
                                <button type="button" onclick="window.location.href = '/Home/Application'" class="btn-2">More Info</button>
                            </div>
                        </div>
                    </div>
                </td>
            }
        </tr>

    </table>
</section>

@Html.Partial("_scripts")