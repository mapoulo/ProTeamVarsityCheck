@model VarsityCheck.ViewModels.DisplayViews

@{
    ViewBag.Title = "Bursary";

}

<section>
    <div class="head-t">
        <article>
            <img src="~/imgz/certificate.png" alt="">
        </article>
        <aside>
            <h5>@ViewBag.Name</h5>
        </aside>
    </div>
</section>
<section>
    <div class="container">


        <div class="row">
            <div class="dropdown">
                <button class="btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filter By Faculty/School
                </button>
                <div class="dropdown-menu filterList" aria-labelledby="dropdownMenuButton">
                    <ul>
                        <li><a class="dropdown-item filterListItem" data-filter="all">ALL</a></li>
                        <li><a class="dropdown-item filterListItem" data-filter="Health Sciences">Health Sciences</a></li>
                        <li><a class="dropdown-item filterListItem" data-filter="Education">Education</a></li>
                        <li><a class="dropdown-item filterListItem" data-filter="Engineering">Engineering</a></li>
                        <li><a class="dropdown-item filterListItem" data-filter="Humanities">Humanities</a></li>
                    </ul>
                </div>
                <input type="text" placeholder="Search" class="searchBar form-control" name="search" data-search>
            </div>
        </div>

        <div class="row filtr-container galleryContainer">

            @foreach (var financial in Model.financialAids)
            {
                <div class="col-md-3 filtr-item thumbnail" data-category="all,@financial.Company" data-sort="@financial.Company">
                    <img src="@Url.Content(financial.Image)" alt="">
                    <span class="item-desc">@financial.BursaryName</span>
                    <button type="button" onclick="window.location.href ='@financial.URL'" class="btn-findMore">More Info</button>
                </div>
            }

        </div>
    </div>
</section>
